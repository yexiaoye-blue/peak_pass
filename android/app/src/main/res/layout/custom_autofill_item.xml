<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="8dp"
    android:paddingVertical="6dp"
    android:gravity="center_vertical"
    tools:ignore="UseCompoundDrawables"
    android:background="@drawable/autofill_item_background">

    <ImageView
        android:id="@+id/autofill_icon"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="@string/autofill_image_desc"
        android:src="@drawable/common_google_signin_btn_icon_light" />

    <TextView
        android:id="@+id/autofill_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textSize="14sp"
        android:text="@string/autofill_item"
        android:textColor="#1a1a1a"/>
</LinearLayout>

